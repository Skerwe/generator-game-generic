{
  "name": "generator-game-generic",
  "version": "2.0.0",
  "description": "A game development project structure generator",
  "homepage": "https://github.com/Skerwe/generator-game-generic#readme",
  "author": {
    "name": "Quintin Henn",
    "email": "quintin.henn@gmail.com",
    "url": "http://skerwe.web.za"
  },
  "files": [
    "generators"
  ],
  "main": "generators/app/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Skerwe/generator-game-generic.git"
  },
  "keywords": [
    "yeoman-generator",
    "game-development",
    "template"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Skerwe/generator-game-generic/issues"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "yeoman-generator": "^5.0.0",
    "yosay": "^2.0.2"
  },
  "devDependencies": {
    "acorn": "^6.4.2",
    "ajv": "^6.12.6",
    "coveralls": "^3.1.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-config-xo": "^0.32.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-utils": "^2.1.0",
    "husky": "^4.3.0",
    "jest": "^26.5.2",
    "lint-staged": "^10.4.0",
    "lodash": ">=4.17.19",
    "prettier": "^2.1.2",
    "snyk": "^1.413.2",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^3.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/generators/app/templates/*"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  },
  "scripts": {
    "pretest": "eslint .",
    "test": "snyk test && jest",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "snyk": true
}
